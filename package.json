{
  "name": "lineboard",
  "displayName": "Lineboard - Linear Sidebar",
  "description": "Easier your workflow with Linear",
  "version": "0.0.1",
  "publisher": "chun-cheng",
  "repository": "https://github.com/Chun-Cheng/vscode-lineboard",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Lineboard",
      "properties": {
        "lineboard.issue-item-icon": {
          "title": "Issue Item Icon",
          "type": "string",
          "default": "status",
          "enum": [
            "status",
            "priority",
            "assignee",
            "none"
          ],
          "description": "The icon to show in the issue list."
        }
      }
    },
    "commands": [
      {
        "command": "lineboard.hello-world",
        "title": "Lineboard: Hello World"
      },
      {
        "command": "lineboard.debug",
        "title": "Lineboard: Dev Debug"
      },
      {
        "command": "lineboard.connect",
        "title": "Lineboard: Connect to Linear"
      },
      {
        "command": "lineboard.refresh-issues",
        "title": "Lineboard: Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "lineboard.show-issue",
        "title": "Lineboard: Show Issue"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lineboard",
          "title": "Lineboard",
          "icon": "media/linear-logo.svg"
        }
      ]
    },
    "views": {
      "lineboard": [
        {
          "id": "linear-issues",
          "name": "Issues",
          "icon": "media/issues.svg",
          "contextualTitle": "Issues Contextual Title"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "lineboard.refresh-issues",
          "when": "view == linear-issues",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "linear-issues",
        "contents": "Connect to Linear to get started.\n[Connect to Linear](command:lineboard.connect)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@linear/sdk": "^33.0.0",
    "marked": "^15.0.3"
  },
  "extensionDependencies": [
    "linear.linear-connect"
  ]
}
