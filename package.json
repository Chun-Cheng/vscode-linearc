{
  "name": "linear-sidebar",
  "displayName": "Linear Sidebar",
  "description": "Easier your workflow with Linear",
  "version": "0.0.1",
  "publisher": "chun-cheng",
  "repository": "https://github.com/Chun-Cheng/vscode-linear-sidebar",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linear-sidebar.hello-world",
        "title": "Hello World"
      },
      {
        "command": "linear-sidebar.connect",
        "title": "Connect to Linear"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linear-sidebar",
          "title": "Linear",
          "icon": "media/linear-logo.svg"
        }
      ]
    },
    "views": {
      "linear-sidebar": [
        {
          "id": "linear-issues",
          "name": "Issues",
          "icon": "media/issues.svg",
          "contextualTitle": "Issues Contextual Title"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "linear-sidebar",
        "contents": "[Connect to Linear](command:linear-sidebar.connect) to get started."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@linear/sdk": "^33.0.0"
  },
  "extensionDependencies": [
    "linear.linear-connect"
  ]
}
