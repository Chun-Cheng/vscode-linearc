{
  "name": "linearc",
  "displayName": "LineArc - Linear Sidebar",
  "description": "Easier your workflow with Linear",
  "version": "0.0.1",
  "publisher": "chun-cheng",
  "repository": "https://github.com/Chun-Cheng/vscode-linearc",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/linearc-icon-bg.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LineArc",
      "properties": {
        "linearc.issue-item-icon": {
          "title": "Issue Item Icon",
          "type": "string",
          "default": "status",
          "enum": [
            "status",
            "priority",
            "assignee",
            "none"
          ],
          "description": "The icon to show in the issue list."
        }
      }
    },
    "commands": [
      {
        "command": "linearc.hello-world",
        "title": "LineArc: Hello World"
      },
      {
        "command": "linearc.debug",
        "title": "LineArc: Dev Debug"
      },
      {
        "command": "linearc.connect",
        "title": "LineArc: Connect to Linear"
      },
      {
        "command": "linearc.refresh-issues",
        "title": "LineArc: Refresh Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "linearc.show-issue",
        "title": "LineArc: Show Issue"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linearc",
          "title": "LineArc",
          "icon": "media/linearc-logo.svg"
        }
      ]
    },
    "views": {
      "linearc": [
        {
          "id": "linear-issues",
          "name": "Issues",
          "icon": "media/dark/issues.svg"
        },
        {
          "id": "linear-projects",
          "name": "Projects",
          "icon": "media/dark/projects.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "linearc.refresh-issues",
          "when": "view == linear-issues",
          "group": "navigation"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "linear-issues",
        "contents": "Connect to Linear to get started.\n[Connect to Linear](command:linearc.connect)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@linear/sdk": "^33.0.0",
    "marked": "^15.0.3"
  },
  "extensionDependencies": [
    "linear.linear-connect"
  ]
}
